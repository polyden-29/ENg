@model Okoone_Assignment.UserLogin

@{
    ViewBag.Title = "Login";
}

<html>
    <head>
        <title>Login Form</title>
        <script src="@Url.Content("~/Scripts/jquery-3.1.1.min.js")"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>
    </head>
    <body style="background-color:#088fe8;font-family:'Segoe UI'">
        @using (Html.BeginForm("Login", "Page", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

             if (ViewBag.InPw != null) { 
                    @ViewBag.InPw
                }
            <center>    
                <div style="border-radius:10px;border:3px solid white;width:600px;height:200px;color:white;">  
                    <h2>Login</h2>  
                    <table>
        
                        <tr>
                            <td style="color:white">@Html.LabelFor(m => m.Username)</td>
                            <td>@Html.TextBoxFor(m => m.Username)</td>
                            <td>@Html.ValidationMessageFor(m => m.Username)</td>
                        </tr>
                        
                        <tr>
                            <td style="color:white">@Html.LabelFor(m => m.Password)</td>
                            <td>@Html.PasswordFor(m => m.Password)</td>
                            <td> @Html.ValidationMessageFor(m => m.Password)</td>
                        </tr>
                       
                        <tr>
                            <td ><input style=" color:white;padding: 3px; background-color: #088fe8; border:2px solid white; border-radius: 4px" type="submit" value="Sign In"></td>
                            <td style="color:white">Don't have an account? @Html.ActionLink("Register","Register") Now!</td>
                        </tr>
                    </table>
                </div>
            </center>
        }
    </body>
</html>